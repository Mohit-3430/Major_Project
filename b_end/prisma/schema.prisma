generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Specialization {
  Banking_and_Finance_Law
  Civil_Litigation_and_Dispute_Law
  Corporate_Law
  Constitutional_Law
  Consumer_Protection_Law
  Criminal_Law
  Family_Law
  Human_Rights_Law
  Intellectual_Property_Law
  Property_Law
  Tax_Law
}

model User {
  id              String           @id @default(uuid())
  email           String           @unique
  name            String
  usertype        String
  age             Int
  password        String
  Specializations Specialization[]
  createdAt       DateTime         @default(now())
  lawyerCases     Case[]           @relation("LawyerCases")
  clientCases     Case[]           @relation("ClientCases")

  @@index([email])
}

model Case {
  id                String   @id @default(uuid())
  lawyer            User     @relation("LawyerCases", fields: [lawyerMail], references: [email])
  lawyerMail        String
  client            User     @relation("ClientCases", fields: [clientMail], references: [email])
  clientMail        String
  createdAt         DateTime @default(now())
  transactionAmount Int

  @@index([lawyerMail])
  @@index([clientMail])
}
